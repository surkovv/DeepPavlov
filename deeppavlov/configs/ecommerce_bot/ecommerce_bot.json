{
  "dataset_reader": {
    "class_name": "amazon_ecommerce_reader",
    "data_path": "{DOWNLOADS_PATH}/amazon_ecommerce",
    "catalog": "Phones"
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
 "chainer": {
    "in": ["query", "history", "state"],
    "out": ["response"],
    "pipe": [
      {
        "class_name": "ecommerce_bot",
        "in": ["query", "history", "state"],
        "fit_on": ["query"],
        "min_similarity": 0.5,
        "min_entropy": 0.5,
        "entropy_fields": ["Size", "Brand", "Author", "Color", "Genre"],
        "save_path": "{MODELS_PATH}/ecommerce_bot/ecommerce_Phones_model.pkl",
        "load_path": [
          "{MODELS_PATH}/ecommerce_bot/ecommerce_Phones_model.pkl",
          "{MODELS_PATH}/ecommerce_bot/ecommerce_Electronics_model.pkl"
        ],
        "preprocess": {
          "class_name": "ecommerce_preprocess",
          "spacy_model": "en_core_web_sm",
          "disable": ["parser"]
        },
        "out": ["response"]
      }
    ]
   },
   "train":{
   },
   "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models"
    },
    "labels": {
      "telegram_utils": "EcommerceBot",
      "server_utils": "EcommerceBot"
    },
    "requirements": [
        "{DEEPPAVLOV_PATH}/requirements/spacy.txt",
        "{DEEPPAVLOV_PATH}/requirements/en_core_web_sm.txt"
      ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/ecommerce_bot/ecommerce_Phones_model.pkl",
        "subdir": "{MODELS_PATH}/ecommerce_bot"
      },
      {
        "url": "http://files.deeppavlov.ai/ecommerce_bot/ecommerce_Books_model.pkl",
        "subdir": "{MODELS_PATH}/ecommerce_bot"
      },
      {
        "url": "http://files.deeppavlov.ai/ecommerce_bot/ecommerce_Movies_model.pkl",
        "subdir": "{MODELS_PATH}/ecommerce_bot"
      },
      {
        "url": "http://files.deeppavlov.ai/ecommerce_bot/ecommerce_Electronics_model.pkl",
        "subdir": "{MODELS_PATH}/ecommerce_bot"
      },
      {
        "url": "http://files.deeppavlov.ai/ecommerce_bot/ecommerce_Home_model.pkl",
        "subdir": "{MODELS_PATH}/ecommerce_bot"
      },
      {
        "url": "http://files.deeppavlov.ai/ecommerce_bot/ecommerce_Automotive_model.pkl",
        "subdir": "{MODELS_PATH}/ecommerce_bot"
      }
    ]
  }
}
