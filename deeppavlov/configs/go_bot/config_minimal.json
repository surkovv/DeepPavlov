{
  "dataset_reader": {
    "name": "dstc2_datasetreader",
    "data_path": "dstc2"
  },
  "dataset": {
    "name": "dialog_dataset"
  },
  "vocabs": {
    "word_vocab": {
      "train_now": true,
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "token",
      "tokenize": true,
      "save_path": "vocabs/word.dict",
      "load_path": "vocabs/word.dict"
    }
  },
  "model": {
    "train_now": true,
    "name": "go_bot",
	"debug": false,
    "template_path": "dstc2/dstc2-templates.txt",
    "network": {
      "train_now": true,
      "name": "go_bot_rnn",
      "load_path": "go_bot_minimal/model",
      "save_path": "go_bot_minimal/model",
      "learning_rate": 0.02,
      "hidden_dim": 128,
	  "dense_size": 32,
      "obs_size": 502,
      "use_action_mask": false,
      "action_size": 45
    },
    "slot_filler": null,
    "intent_classifier": null,
	"embedder": null,
    "bow_encoder": {
      "name": "bow"
    },
    "tokenizer": {
      "name": "spacy_tokenizer"
    },
    "tracker": {
      "name": "featurized_tracker",
      "slot_names": [
        "pricerange",
        "this",
        "area",
        "slot",
        "food",
        "name"
      ]
    }
  },
  "train": {
	"epochs": 200,
	"batch_size": 1,

	"metrics": ["per_item_dialog_accuracy"],
	"validation_patience": 30,
	"val_every_n_epochs": 1,

	"log_every_n_batches": -1,
	"log_every_n_epochs": 1,
	"show_examples": false
  }
}

