{
  "dataset_reader": {
    "name": "dstc2_datasetreader",
    "data_path": "../data/dstc2"
  },
  "dataset": {
    "name": "dialog_dataset"
  },
  "vocabs": {
    "word_vocab": {
      "train_now": true,
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "token",
      "tokenize": true,
      "ser_path": "../data/vocabs/word.dict"
    },
    "token_vocab": {
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "token",
      "ser_path": "../data/ner/token.dict"
    },
    "tag_vocab": {
      "name": "default_vocab",
      "inputs": [
        "y"
      ],
      "level": "token",
      "ser_path": "../data/ner/tag.dict"
    },
    "char_vocab": {
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "char",
      "ser_path": "../data/ner/char.dict"
    },
    "classes_vocab": {
      "name": "default_vocab",
      "inputs": [
        "y"
      ],
      "level": "token",
      "ser_path": "../download/vocabs/classes.dict"
    }
  },
  "model": {
    "train_now": true,
    "name": "hcn_new",
    "debug": 0,
    "num_epochs": 120,
	"val_patience": 10,
    "template_path": "../data/dstc2/dstc2-templates.txt",
    "network": {
      "train_now": true,
	  "ser_dir": "rnn_wo_emb2",
      "name": "custom_rnn",
      "learning_rate": 0.02,
      "hidden_dim": 128,
      "obs_size": 530,
      "use_action_mask": false,
      "action_size": 45
    },
    "slot_filler": {
      "name": "dstc_slotfilling",
	  "ser_path": "../download/ner",
      "ner_network": {
        "name": "ner_tagging_network",
        "ser_path": "../download/ner",
        "filter_width": 7,
        "embeddings_dropout": true,
        "n_filters": [
          64,
          64
        ],
        "token_embeddings_dim": 64,
        "char_embeddings_dim": 32,
        "use_batch_norm": true,
        "use_crf": true
      }
    },
    "intent_classifier": {
      "name": "intent_model",
      "opt": {
		  "model_name": "cnn_model",
		  "ser_path": "../download/"
      },
      "embedder": {
        "name": "fasttext",
        "ser_path": "../data/embeddings/dstc2_fasttext_model_100.bin",
        "emb_module": "fasttext",
        "dim": 100
      },
      "tokenizer": {
        "name": "nltk_tokenizer",
        "tokenizer": "wordpunct_tokenize"
      }
    },
    "bow_encoder": {
      "name": "bow"
    },
    "embedder": null,
    "tokenizer": {
      "name": "spacy_tokenizer"
    },
    "tracker": {
      "name": "featurized_tracker",
      "slot_names": [
        "pricerange",
        "this",
        "area",
        "slot",
        "food",
        "name"
      ]
    }
  }
}

