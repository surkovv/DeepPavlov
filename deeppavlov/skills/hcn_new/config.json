{
  "dataset_reader": {
    "name": "dstc2_datasetreader",
    "data_path": "../data/dstc2"
  },
  "dataset": {
    "name": "dstc2_dialog_dataset"
  },
  "vocabs": {
    "word_vocab": {
      "train_now": true,
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "token",
      "tokenize": true,
      "ser_path": "../data/vocabs/word_vocab.dict"
    },
    "token_vocab": {
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "token",
      "ser_path": "../data/ner/token.dict"
    },
    "tag_vocab": {
      "name": "default_vocab",
      "inputs": [
        "y"
      ],
      "level": "token",
      "ser_path": "../data/ner/tag.dict"
    },
    "char_vocab": {
      "name": "default_vocab",
      "inputs": [
        "x"
      ],
      "level": "char",
      "ser_path": "../data/ner/char.dict"
    }
  },
  "model": {
    "train_now": true,
    "name": "hcn_new",
    "debug": 0,
    "num_epochs": 1,
    "template_path": "../data/dstc2/dstc2-templates.txt",
    "network": {
      "train_now": true,
      "name": "custom_rnn",
      "learning_rate": 0.03,
      "hidden_dim": 128,
      "obs_size": 831,
      "use_action_mask": false,
      "action_size": 45
    },
    "slot_filler": {
      "name": "dstc_slotfilling",
      "ser_path": "../data/ner/",
      "filter_width": 7,
      "embeddings_dropout": true,
      "n_filters": [
        64,
        64
      ],
      "token_embeddings_dim": 64,
      "char_embeddings_dim": 32,
      "use_batch_norm": true,
      "use_crf": true
    },
    "intent_classifier": {
      "name": "intent_model",
      "opt": {
        "ser_path": "models/classifiers/intents/intent_cnn_best",
        "ser_dir": "intent_cnn_best",
        "ser_file": "intent_cnn_best",
        "classes_file": "models/classifiers/intents/intent_cnn_best/classes.txt",
        "kernel_sizes_cnn": "3 3 3",
        "filters_cnn": 512,
        "lear_metrics": "binary_accuracy fmeasure",
        "confident_threshold": 0.5,
        "optimizer": "Adam",
        "lear_rate": 1.0,
        "lear_rate_decay": 0.1,
        "loss": "binary_crossentropy",
        "text_size": 15,
        "coef_reg_cnn": 1e-4,
        "coef_reg_den": 1e-4,
        "dropout_rate": 0.5,
        "epochs": 1,
        "dense_size": 100,
        "model_name": "cnn_model",
        "batch_size": 64,
        "val_every_n_epochs": 1,
        "verbose": true,
        "val_patience": 5,
        "show_examples": false
      },
      "embedder": {
        "name": "fasttext",
        "ser_path": "../data/embeddings/dstc2_fasttext_model_100.bin",
        "emb_module": "fasttext",
        "dim": 100
      }
    },
    "bow_encoder": {
      "name": "bow"
    },
    "embedder": {
      "name": "fasttext",
      "emb_module": "pyfasttext",
      "mean": true,
      "dim": 300,
      "ser_path": "../data/embeddings/wiki.en.bin"
    },
    "tokenizer": {
      "name": "spacy_tokenizer"
    },
    "tracker": {
      "name": "featurized_tracker",
      "slot_names": [
        "pricerange",
        "this",
        "area",
        "slot",
        "food",
        "name"
      ]
    }
  }
}

