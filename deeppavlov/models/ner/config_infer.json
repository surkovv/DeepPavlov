{
  "dataset_reader": {
    "name": "dstc2_datasetreader",
    "data_path": "/home/mikhail/Projects/Pilot/data/dstc2"
  },
  "dataset": {
    "name": "dstc2_ner_dataset",
    "dataset_path": "/home/mikhail/Projects/Pilot/data/dstc2"

  },
  "model": {
    "name": "dstc_slotfilling",
    "model_path": "models/ner/model/",
    "ner_network": {
      "name": "ner_tagging_network",
      "vocabs": ["token_vocab", "tag_vocab", "char_vocab"],
      "model_path": "models/ner/model/",
      "verbouse": true,
      "filter_width": 7,
      "embeddings_dropout": true,
      "n_filters": [
        64,
        64
      ],
      "token_embeddings_dim": 64,
      "char_embeddings_dim": 32,
      "use_batch_norm": true,
      "use_crf": true
    }
  },

  "vocabs": {
    "token_vocab": {
        "name": "default_vocab",
        "inputs": ["x"],
		"level": "token",
        "model_dir": "data/dstc2",
		"model_file": "token.dict"
      },
    "tag_vocab": {
        "name": "default_vocab",
        "inputs": ["y"],
		"level": "token",
        "model_dir": "data/dstc2",
		"model_file": "tag.dict"

      },
    "char_vocab":{
        "name": "default_vocab",
        "inputs": ["x"],
		"level": "char",
        "model_dir": "data/dstc2",
		"model_file": "char.dict"
      }
  },
  "num_epochs": 10
}

