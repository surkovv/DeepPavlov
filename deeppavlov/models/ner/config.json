{
  "dataset_reader": {
    "name": "dstc2_datasetreader",
    "data_path": "/home/mikhail/Projects/Pilot/data/dstc2"
  },
  "dataset": {
    "name": "dstc2_ner_dataset",
    "dataset_path": "/home/mikhail/Projects/Pilot/data/dstc2"

  },
  "model": {
    "name": "dstc_slotfilling",
    "train_now": true,
    "epochs": 5,
    "ser_dir": "model",
    "ser_file": "dstc_ner_model",
    "vocabs": ["token_vocab", "tag_vocab", "char_vocab"],
    "verbouse": true,
    "filter_width": 7,
    "embeddings_dropout": true,
    "n_filters": [
      64,
      64
    ],
    "token_embeddings_dim": 64,
    "char_embeddings_dim": 32,
    "use_batch_norm": true,
    "use_crf": true
  },

  "vocabs": {
    "word_vocab": {
        "name": "default_vocab",
        "inputs": ["x"],
		"level": "token",
        "ser_dir": "model/",
		"ser_file": "token.dict"
      },
    "tag_vocab": {
        "name": "default_vocab",
        "inputs": ["y"],
		"level": "token",
        "ser_dir": "model/",
		"ser_file": "tag.dict"
      },
    "char_vocab":{
        "name": "default_vocab",
        "inputs": ["x"],
		"level": "char",
        "ser_dir": "model/",
		"ser_file": "char.dict"
      }
  }
}

