{
  "dataset_reader": {
    "name": "dstc2_datasetreader",
	"data_path": "../data/dstc2" 
  },
  "dataset": {
    "name": "dstc2_ner_dataset",
	"dataset_path": "../data/dstc2"
  },
  "model": {
    "name": "dstc_slotfilling",
	"train_now": true,
    "model_path": "../data/ner",
    "ner_network": {
      "name": "ner_tagging_network",
      "vocabs": [
        "token_vocab",
        "tag_vocab",
        "char_vocab"
      ],
      "verbouse": true,
      "filter_width": 7,
      "embeddings_dropout": true,
      "n_filters": [
        64,
        64
      ],
      "token_embeddings_dim": 64,
      "char_embeddings_dim": 32,
      "use_batch_norm": true,
      "use_crf": true
    }
  },
  "vocabs": {
    "token_vocab": {
      "name": "default_vocab",
      "model_path": "../data/ner/token.dict",
      "inputs": [
        "x"
      ],
      "level": "token"
    },
    "tag_vocab": {
      "name": "default_vocab",
      "model_path": "../data/ner/tag.dict",
      "inputs": [
        "y"
      ],
      "level": "token"
    },
    "char_vocab": {
      "name": "default_vocab",
      "model_path": "../data/ner/char.dict",
      "inputs": [
        "x"
      ],
      "level": "char"
    }
  },
  "num_epochs": 1
}
