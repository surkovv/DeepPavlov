{
  "dataset_reader": {
    "name": "classification_datasetreader",
    "data_path": "../data/snips",
    "data_type": "train"
  },
  "dataset": {
    "name": "classification_dataset",
    "prep_method_name": "simple_prep",
    "classes_file": "../data/snips/classes.txt",
    "seed": 42,
    "extract_classes": true,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.9, 0.1]
  },
  "model": {
    "name": "intent_model",
    "train_now": false,
    "model_path": "./models/classifiers/intents/intent_cnn_snips",
    "opt": {
      "classes_file": "../data/snips/classes.txt",
      "kernel_sizes_cnn": [3, 3, 3],
      "filters_cnn": 512,
      "lear_metrics": ["binary_accuracy", "fmeasure"],
      "confident_threshold": 0.3,
      "optimizer": "Adam",
      "lear_rate": 0.1,
      "lear_rate_decay": 0.1,
      "loss": "binary_crossentropy",
      "text_size": 15,
      "coef_reg_cnn": 1e-4,
      "coef_reg_den": 1e-4,
      "dropout_rate": 0.5,
      "epochs": 1000,
      "dense_size": 100,
      "model_name": "cnn_model",
      "batch_size": 64,
      "val_every_n_epochs": 5,
      "verbose": true,
      "val_patience": 5
    },
    "embedder": {
      "name": "fasttext",
      "model_path": "../data/reddit_fasttext_model.bin",
      "emb_module": "fasttext",
      "dim": 100
    }
  }
}